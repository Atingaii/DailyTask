generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String?  @unique
  displayName String?  @map("display_name")
  createdAt   DateTime @default(now()) @map("created_at")

  tasks        Task[]
  moods        DailyMood[]
  gameProgress GameProgress?

  @@map("users")
}

model Task {
  id          String   @id @default(uuid())
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?  @map("user_id")
  taskDate    DateTime @map("task_date") @db.Date
  title       String
  note        String?
  isCompleted Boolean  @default(false) @map("is_completed")
  orderIndex  Int      @default(0) @map("order_index")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([userId, taskDate], name: "idx_tasks_user_date")
  @@index([taskDate], name: "idx_tasks_date")
  @@map("tasks")
}

model DailyQuote {
  id        Int      @id @default(autoincrement())
  content   String
  author    String?
  language  String   @default("zh")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("daily_quotes")
}

model DailyMood {
  id        String   @id @default(uuid())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?  @map("user_id")
  moodDate  DateTime @unique @map("mood_date") @db.Date
  mood      String   // emoji: â˜€ï¸, â›…, â˜ï¸, ğŸŒ§ï¸, âš¡
  note      String?  // å¯é€‰çš„å¿ƒæƒ…å¤‡æ³¨
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([userId, moodDate], name: "idx_mood_user_date")
  @@map("daily_moods")
}

model GameProgress {
  id              String   @id @default(uuid())
  user            User?    @relation(fields: [userId], references: [id])
  userId          String?  @unique @map("user_id")
  xp              Int      @default(0)
  totalCompleted  Int      @default(0) @map("total_completed")
  streak          Int      @default(0)
  lastActiveDate  DateTime? @map("last_active_date") @db.Date
  achievements    String   @default("{}") // JSON string of unlocked achievements
  dailyCompleted  String   @default("{}") @map("daily_completed") // JSON: {date: count}
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@map("game_progress")
}
